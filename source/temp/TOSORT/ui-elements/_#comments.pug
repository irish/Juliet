#comments.comments-area
	#respond.comment-respond
		h2#reply-title.comment-reply-title
			| Leave a Reply 
			small
				a#cancel-comment-reply-link(rel='nofollow', href='/#respond', style='display:none;') Cancel reply
		form#commentform.comment-form(action='http://10.10.17.141:8888/wp-comments-post.php', method='post', novalidate='')
			p.comment-notes
				span#email-notes Your email address will not be published.
				|  Required fields are marked 
				span.required *
			p.comment-form-comment
				label(for='comment') Comment
				textarea#comment(name='comment', cols='45', rows='8', maxlength='65525', aria-required='true', required='required')
			p.comment-form-author
				label(for='author')
					| Name 
					span.required *
				input#author(name='author', value='', size='30', maxlength='245', aria-required='true', required='required', type='text')
			p.comment-form-email
				label(for='email')
					| Email 
					span.required *
				input#email(name='email', value='', size='30', maxlength='100', aria-describedby='email-notes', aria-required='true', required='required', type='email')
			p.comment-form-url
				label(for='url') Website
				input#url(name='url', value='', size='30', maxlength='200', type='url')
			p.form-submit
				input#submit.submit(name='submit', value='Post Comment', type='submit')
				input#comment_post_ID(name='comment_post_ID', value='701', type='hidden')
				input#comment_parent(name='comment_parent', value='0', type='hidden')
	// #respond